<div class="jumbotron mt-1">
    <h1 class="display-4">API-REST-Clouding-App (SPA)</h1>
    <p class="lead">Lorem ipsum dolor sit amet consectetur, adipisicing elit.
        Ipsum, sed?</p>
    <hr class="my-4">
    <div class="card-body container">
        <form action="/api/tasks" method="POST">
            <div class="form-group">
                <input type="text" name="title" class="form-control"
                    placeholder="Type new task" value="{{title}}">
            </div>
            <div class="form-group">
                <input type="text" name="description" class="form-control"
                    placeholder="Type description task" value="{{description}}">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-sm btn-block">Submit</button>
            </div>
        </form>
    </div>
    <hr>
    <div class="col col-md-12">
        <div class="container">
            <div class="float-right">
                <button class="btn btn-dark btn-sm disabled">
                    Show done
                </button>
            </div>

            <div class="float-right">
                <span class" float-right check">
                    <button class="btn btn-dark btn-sm ml-2 mr-2">
                        <a class="text-light" href="/api/tasks/">
                            <b>Show all</b>
                        </a>
                    </button>
                </span>
            </div>
            <div class="float-right">
                <span class" float-right check">
                    <button class="btn btn-dark btn-sm ml-2 mr-2">
                        <a class="text-light" href="/api/tasks/unchecked">
                            <b>Show only undone</b>
                        </a>
                    </button>
                </span>
            </div>

        </div>
    </div>
    <div class=""><h4> Showing done Tasks</h4></div>
    <div class="row row-cols-1 row-cols-md-3 d-flex">

        {{#each doneTasks}}
        <div class="col md-12">
            <div class="container">
                <div class="col mb-4 mt-4">
                    <div class="card border-success">
                        <div class="card-header bg-transparent
                            border-succes">
                            <form action="/api/tasks/{{_id}}?_method=DELETE"
                                method="POST">
                                <input type="hidden" name="_method"
                                    value="DELETE">
                                <button class="deleteButton"
                                    type="submit"><a class="float-right
                                        deleteIcon"
                                        href=""><i
                                            class="far fa-trash-alt"></i></a>
                                </button>
                            </form>
                            <a class="float-right" href="/api/tasks/{{id}}">
                                <i class="far fa-eye"></i>
                            </a>
                        </div>
                        <div class="card-body">
                            <img
                                src="https://mdbootstrap.com/img/new/standard/city/041.jpg"
                                class="card-img-top img-fluid"
                                alt="..."
                                />
                            <h5 class="card-title">{{title}}</h5>
                            <p class="card-text">

                                {{description}}
                            </p>
                            <p><b>Done: {{done}}</b></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>