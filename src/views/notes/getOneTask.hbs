<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <a href="/api/tasks/"><i class="fas fa-arrow-left"></i></a>
    <div class="d-flex ml-auto mr-auto">
      <h3 class="m-auto">Edit task</h3>
    </div>
  </form>
  <hr>
  <h3>Current task</h3>
  <span>title: </span>
  <h5>{{task.title}}</h5>
  <span>description: </span>
  <h5>{{task.description}}</h5>
  <div class="float-right"><p> Date: {{task.createdAt}}</p></div>
  <hr>
  <form action="/api/tasks/{{task._id}}?_method=PUT" method="POST">
    <div class="form-group">
      <label for="title">Update title</label>
      <input type="text" name="title" placeholder="Your title task"
        class="form-control display-4">
    </div>
    <div class="form-group">
      <label for="description">Update description</label>
      <input type="text" name="description" placeholder="Your description task"
        class="form-control display-4">
    </div>
    <div class="form-group"> Done
      <input type="checkbox" name="done" id="done">
    </div>
    <button class="btn btn-info putButton"
      ><a class="float-right putIcon" href=""><i
          class="far fa-edit"></i></a>Update task
    </button>
  </form>
  <hr>
  </div>

</div>